{
  "manifest_version": 3,
  "name": "My Power Platform",
  "version": "1.0.4",
  "description": "My Year on the Power Platform",
  "homepage_url":"https://powerdevbox.com/",
  "icons": { 
    "128": "icon128.png" 
    },
  "action": {
    "default_icon": {
      "128": "icon128.png"
    },
    "default_title": "My Power P"
  },
  "permissions": ["webRequest"],
  "host_permissions": [
    "https://*.api.flow.microsoft.com/*",
    "https://*.api.powerapps.com/*",
    "https://make.powerautomate.com/*",    
    "https://*.dynamics.com/api/data/v9*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
